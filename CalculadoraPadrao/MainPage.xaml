<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculadoraPadrao.MainPage">

    <Grid
        BackgroundColor="White"
        Padding="15"
        ColumnSpacing="15"
        RowSpacing="15">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="200"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Frame
            BackgroundColor="Transparent"
            CornerRadius="3"
            Grid.ColumnSpan="4"
            HeightRequest="160">
            
            <Label
                x:Name="lblResultado"/>
        </Frame>

        <Button
            x:Name="btn1"
            Text="&#37;"
            Grid.Row="1"/>

        <Button
            x:Name="btn2"
            Text="CE"
            Grid.Row="1"
            Grid.Column="1"/>

        <Button
            x:Name="btn3"
            Text="C"
            Grid.Row="1"
            Grid.Column="2"/>

        <Button
            x:Name="btn4"
            Text="&#8920;"
            Grid.Row="1"
            Grid.Column="3"/>

        <Button
            x:Name="btn5"
            Text="1/X"
            Grid.Row="2"/>

        <Button
            x:Name="btn6"
            Text="X²"
            Grid.Row="2"
            Grid.Column="1"/>

        <Button
            x:Name="btn7"
            Text="Raiz ²"
            Grid.Row="2"
            Grid.Column="2"/>

        <Button
            x:Name="btn8"
            Text="/"
            Grid.Row="2"
            Grid.Column="3"/>

        <Button
            x:Name="btn9"
            Text="7"
            Grid.Row="3"/>

        <Button
            x:Name="btn10"
            Text="8"
            Grid.Row="3"
            Grid.Column="1"/>

        <Button
            x:Name="btn11"
            Text="9"
            Grid.Row="3"
            Grid.Column="2"/>

        <Button
            x:Name="btn12"
            Text="X"
            Grid.Row="3"
            Grid.Column="3"/>

        <Button
            x:Name="btn13"
            Text="4"
            Grid.Row="4"/>

        <Button
            x:Name="btn14"
            Text="5"
            Grid.Row="4"
            Grid.Column="1"/>

        <Button
            x:Name="btn15"
            Text="6"
            Grid.Row="4"
            Grid.Column="2"/>

        <Button
            x:Name="btn16"
            Text="-"
            Grid.Row="4"
            Grid.Column="3"/>

        <Button
            x:Name="btn17"
            Text="1"
            Grid.Row="5"/>

        <Button
            x:Name="btn18"
            Text="2"
            Grid.Row="5"
            Grid.Column="1"/>

        <Button
            x:Name="btn19"
            Text="3"
            Grid.Row="5"
            Grid.Column="2"/>

        <Button
            x:Name="btn20"
            Text="+"
            Grid.Row="5"
            Grid.Column="3"/>

        <Button
            x:Name="btn21"
            Text="+/-"
            Grid.Row="6"/>

        <Button
            x:Name="btn22"
            Text="0"
            Grid.Row="6"
            Grid.Column="1"/>

        <Button
            x:Name="btn23"
            Text="."
            Grid.Row="6"
            Grid.Column="2"/>

        <Button
            x:Name="btn25"
            Text="="
            Grid.Row="6"
            Grid.Column="3"/>

    </Grid>

</ContentPage>
